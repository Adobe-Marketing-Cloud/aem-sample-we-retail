<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured">
    <initial jcr:primaryType="nt:unstructured">
        <jcr:content
            cq:deviceGroups="[/etc/mobile/groups/responsive]"
            jcr:primaryType="cq:PageContent"
            sling:resourceType="we-retail/components/structure/templated-page">
            <cq:responsive jcr:primaryType="nt:unstructured">
                <breakpoints jcr:primaryType="nt:unstructured">
                    <phone
                        jcr:primaryType="nt:unstructured"
                        title="Smaller Screen"
                        width="{Decimal}650"/>
                    <tablet
                        jcr:primaryType="nt:unstructured"
                        title="Tablet"
                        width="{Decimal}1200"/>
                </breakpoints>
            </cq:responsive>
        </jcr:content>
    </initial>
    <policies jcr:primaryType="nt:unstructured">
        <jcr:content
            jcr:primaryType="nt:unstructured"
            sling:resourceType="wcm/core/components/policies/mappings">
            <root
                cq:policy="/etc/designs/policies/we-retail/components/structure/responsivegrid/root"
                jcr:primaryType="nt:unstructured"
                sling:resourceType="wcm/core/components/policies/mapping">
                <responsivegrid
                    cq:policy="/etc/designs/policies/we-retail/components/structure/responsivegrid/default"
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="wcm/core/components/policies/mapping"/>
            </root>
        </jcr:content>
    </policies>
    <structure jcr:primaryType="nt:unstructured">
        <jcr:content
            cq:deviceGroups="[/etc/mobile/groups/responsive]"
            jcr:primaryType="cq:PageContent"
            sling:resourceType="we-retail/components/structure/templated-page">
            <root
                jcr:primaryType="nt:unstructured"
                sling:resourceType="wcm/foundation/components/responsivegrid"/>
            <cq:responsive jcr:primaryType="nt:unstructured">
                <breakpoints jcr:primaryType="nt:unstructured">
                    <phone
                        jcr:primaryType="nt:unstructured"
                        title="Smaller Screen"
                        width="{Decimal}650"/>
                    <tablet
                        jcr:primaryType="nt:unstructured"
                        title="Tablet"
                        width="{Decimal}1200"/>
                </breakpoints>
            </cq:responsive>
        </jcr:content>
    </structure>
</jcr:root>
