<div data-component-id="{{id}}" data-scf-component="weretail/components/hbs/voting" class="we-Reactions">
    {{#if loggedInUser.loggedIn}}
        {{#if canUserRespond}}
            {{#if currentUserResponse}}
                {{#if currentUserLike}}
                    <i class="we-Icon we-Icon--like" type="button" evt="click=vote" data-voting-value="unset" alt="{{i18n "Vote up"}}"></i>
                {{else}}
                    <i class="we-Icon we-Icon--like" type="button" evt="click=vote" data-voting-value="1" alt="{{i18n "Vote up"}}"></i>
                {{/if}}
            {{else}}
                <i class="we-Icon we-Icon--like" type="button" evt="click=vote" data-voting-value="1" alt="{{i18n "Vote up"}}"></i>
            {{/if}}
        {{else}}
            <i class="we-Icon we-Icon--like" type="button" evt="click=vote" data-voting-value="unset" alt="{{i18n "Vote up"}}"></i>
        {{/if}}
    {{else}}
        <i class="we-Icon we-Icon--like" type="button" evt="click=vote" data-voting-value="unset" alt="{{i18n "Vote up"}}"></i>
    {{/if}}
    <span data-vote-count="{{netCount}}">{{netCount}}</span>
</div>
