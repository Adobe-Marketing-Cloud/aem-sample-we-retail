<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Page">
    <jcr:content
        cq:template="/conf/we-retail/settings/wcm/templates/product-page"
        jcr:language="en"
        jcr:primaryType="cq:PageContent"
        jcr:title="Product Page Template"
        sling:resourceType="we-retail/components/structure/page">
        <root
            jcr:primaryType="nt:unstructured"
            sling:resourceType="wcm/foundation/components/responsivegrid">
            <breadcrumb
                jcr:primaryType="nt:unstructured"
                sling:resourceType="we-retail/components/structure/breadcrumb"/>
            <product
                cq:commerceType="product"
                jcr:primaryType="nt:unstructured"
                sling:resourceType="we-retail/components/structure/product"/>
            <responsivegrid
                jcr:primaryType="nt:unstructured"
                sling:resourceType="wcm/foundation/components/responsivegrid"/>
            <reviews_section_title
                jcr:primaryType="nt:unstructured"
                jcr:title="Reviews"
                sling:resourceType="we-retail/components/content/title"/>
            <reviews
                jcr:primaryType="nt:unstructured"
                sling:resourceType="we-retail/components/structure/product-reviews"/>
            <similar_section_title
                jcr:primaryType="nt:unstructured"
                jcr:title="You may also like"
                sling:resourceType="we-retail/components/content/title"/>
            <similar_products
                jcr:primaryType="nt:unstructured"
                sling:resourceType="we-retail/components/structure/product-recommendation"/>
        </root>
    </jcr:content>
</jcr:root>
