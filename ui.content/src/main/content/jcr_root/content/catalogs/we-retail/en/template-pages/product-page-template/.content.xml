<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Page">
    <jcr:content
        cq:template="/conf/we-retail/settings/wcm/templates/content-page"
        cq:templateType="/conf/we-retail/settings/wcm/template-types/html5page"
        jcr:language="en"
        jcr:primaryType="cq:PageContent"
        jcr:title="Product Page Template"
        sling:resourceType="we-retail/components/structure/templated-page">
        <root
            jcr:primaryType="nt:unstructured"
            sling:resourceType="wcm/foundation/components/responsivegrid">
            <responsivegrid
                jcr:primaryType="nt:unstructured"
                sling:resourceType="wcm/foundation/components/responsivegrid">
	            <product
	                jcr:primaryType="nt:unstructured"
	                sling:resourceType="we-retail/components/content/product"/>
	            <section_title
                	jcr:primaryType="nt:unstructured"
                	jcr:title="Reviews"
                	sling:resourceType="we-retail/components/content/section-title"/>
            	<reviews
                	jcr:primaryType="nt:unstructured"
                	sling:resourceType="we-retail/components/content/product/reviews"/>
            </responsivegrid>
        </root>
        <cq:responsive jcr:primaryType="nt:unstructured">
            <breakpoints jcr:primaryType="nt:unstructured">
                <phone
                    jcr:primaryType="nt:unstructured"
                    title="Phone"
                    width="{Decimal}650"/>
                <tablet
                    jcr:primaryType="nt:unstructured"
                    title="Tablet"
                    width="{Decimal}1200"/>
            </breakpoints>
        </cq:responsive>
    </jcr:content>
</jcr:root>
