<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Page">
    <jcr:content
        cq:template="/conf/we-retail/settings/wcm/templates/product-page"
        jcr:language="en"
        jcr:primaryType="cq:PageContent"
        jcr:title="Product Page Template"
        sling:resourceType="we-retail/components/structure/page">
        <root
            jcr:primaryType="nt:unstructured"
            sling:resourceType="wcm/foundation/components/responsivegrid">
            <responsivegrid
                jcr:primaryType="nt:unstructured"
                sling:resourceType="wcm/foundation/components/responsivegrid">
                <breadcrumb
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="we-retail/components/structure/breadcrumb"/>
                <product
                    cq:commerceType="product"
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="we-retail/components/content/product"/>
                <reviews_section_title
                    jcr:primaryType="nt:unstructured"
                    jcr:title="Reviews"
                    sling:resourceType="we-retail/components/content/title"/>
                <reviews
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="we-retail/components/content/product-reviews"/>
                <similar_section_title
                    jcr:primaryType="nt:unstructured"
                    jcr:title="You may also like"
                    sling:resourceType="we-retail/components/content/title"/>
                <similar_products
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="we-retail/components/content/product-recommendation"
                    max="6"
                    relationshipType="relatedproducts:info.we-retail.similar-to-current"/>
                <footer_content_container
                        jcr:created="{Date}2015-11-09T18:18:11.897+01:00"
                        jcr:createdBy="admin"
                        jcr:lastModified="{Date}2015-11-09T18:18:21.360+01:00"
                        jcr:lastModifiedBy="admin"
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="we-retail/components/content/layout-container-bg"
                        containerCSSClass="we-FooterSection width-full">
                    <par
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="wcm/foundation/components/responsivegrid">
                        <find_store
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="we-retail/components/content/find-store"/>
                    </par>
                </footer_content_container>
            </responsivegrid>
        </root>
    </jcr:content>
</jcr:root>
